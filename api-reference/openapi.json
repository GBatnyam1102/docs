{
  "openapi": "3.1.0",
  "info": {
    "title": "BNPL API",
    "description": "BNPL системийн харилцагч лавлах болон үүсгэх API",
    "version": "1.0.0",
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com"
    }
  ],
  "paths": {
    "/bnpl/info/user": {
      "get": {
        "summary": "Харилцагч лавлах",
        "description": "Харилцагчийн мэдээллийг регистрийн дугаараар лавлах. Давхардсан харилцагч илэрвэл `DUP_` prefix-тэй утга буцаана.",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "parameters": [
          {
            "name": "register",
            "in": "query",
            "required": true,
            "description": "Харилцагчийн регистрийн дугаар",
            "schema": {
              "type": "string",
              "example": "ХХ00112233"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Харилцагчийн мэдээлэл",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserLookupResponse"
                },
                "example": {
                  "value": {
                    "userId": 269912,
                    "mobileNumber": "88805256",
                    "registerCode": "ЕЛ96112917",
                    "firstName": "Тэгшжаргал",
                    "lastName": "Мягмар",
                    "userAcct": null
                  },
                  "data": null,
                  "msgList": [],
                  "attrs": {},
                  "status": "Success"
                }
              }
            }
          }
        }
      }
    },

    "/bnpl/merge/user": {
      "post": {
        "summary": "Харилцагч үүсгэх",
        "description": "Харилцагч бүртгэлтэй бол ID-г буцаана. Бүртгэлгүй бол шинээр үүсгээд ID буцаана.",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserRequest"
              },
              "example": {
                "mobileNumber": "88805256",
                "registerCode": "ЕЛ96112917",
                "firstName": "Тэгшжаргал",
                "lastName": "Мягмар",
                "userAcct": "1234567890"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Харилцагч амжилттай үүссэн",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateUserResponse"
                },
                "example": {
                  "value": 269912,
                  "data": null,
                  "msgList": [],
                  "attrs": {},
                  "status": "Success"
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    },

    "schemas": {
      "UserLookupResponse": {
        "type": "object",
        "properties": {
          "value": {
            "$ref": "#/components/schemas/User"
          },
          "data": {
            "type": ["object", "null"]
          },
          "msgList": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "attrs": {
            "type": "object"
          },
          "status": {
            "type": "string",
            "example": "Success"
          }
        }
      },

      "User": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer",
            "description": "Харилцагчийн дугаар"
          },
          "mobileNumber": {
            "type": "string",
            "description": "Утасны дугаар"
          },
          "registerCode": {
            "type": "string",
            "description": "Регистрийн дугаар"
          },
          "firstName": {
            "type": "string",
            "description": "Нэр"
          },
          "lastName": {
            "type": "string",
            "description": "Овог"
          },
          "userAcct": {
            "type": ["string", "null"],
            "description": "Дансны дугаар"
          }
        },
        "required": [
          "userId",
          "mobileNumber",
          "registerCode",
          "firstName",
          "lastName"
        ]
      },

      "CreateUserRequest": {
        "type": "object",
        "required": [
          "mobileNumber",
          "registerCode",
          "firstName",
          "lastName",
          "userAcct"
        ],
        "properties": {
          "mobileNumber": {
            "type": "string",
            "minLength": 8,
            "maxLength": 8,
            "description": "Утасны дугаар"
          },
          "registerCode": {
            "type": "string",
            "minLength": 10,
            "maxLength": 10,
            "description": "Регистрийн дугаар"
          },
          "firstName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "lastName": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "userAcct": {
            "type": "string",
            "description": "Дансны дугаар"
          },
          "familyName": {
            "type": "string"
          },
          "refMobile": {
            "type": "string"
          },
          "refMobile1": {
            "type": "string"
          },
          "eduLevelId": {
            "type": "string",
            "enum": ["1", "2", "4", "5", "6"]
          },
          "work": {
            "type": "string"
          },
          "address": {
            "type": "string"
          }
        }
      },

      "CreateUserResponse": {
        "type": "object",
        "required": ["value", "status"],
        "properties": {
          "value": {
            "type": "integer",
            "description": "Харилцагчийн дугаар"
          },
          "data": {
            "type": ["object", "null"]
          },
          "msgList": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "attrs": {
            "type": "object"
          },
          "status": {
            "type": "string",
            "example": "Success"
          }
        }
      }
    }
  }
}
