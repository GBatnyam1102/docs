{
  "openapi": "3.1.0",
  "info": {
    "title": "BNPL API",
    "description": "BNPL системийн харилцагч лавлах, үүсгэх болон нэмэлт мэдээлэл бүртгэх API",
    "version": "1.0.0",
    "license": {
      "name": "MIT"
    }
  },
  "servers": [
    {
      "url": "https://api.example.com"
    }
  ],

  "paths": {
    "/bnpl/info/user": {
      "get": {
        "summary": "Харилцагч лавлах",
        "description": "Харилцагчийн мэдээллийг регистрийн дугаараар лавлах. Давхардсан харилцагч илэрвэл `DUP_` prefix-тэй утга буцаана.",
        "security": [{ "basicAuth": [] }],
        "parameters": [
          {
            "name": "register",
            "in": "query",
            "required": true,
            "description": "Харилцагчийн регистрийн дугаар",
            "schema": {
              "type": "string",
              "example": "ХХ00112233"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Харилцагчийн мэдээлэл",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/UserLookupResponse"
                }
              }
            }
          }
        }
      }
    },

    "/bnpl/merge/user": {
      "post": {
        "summary": "Харилцагч үүсгэх",
        "description": "Харилцагч бүртгэлтэй бол тухайн ID-г буцаана. Бүртгэлгүй бол шинээр үүсгээд ID буцаана.",
        "security": [{ "basicAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Харилцагч амжилттай үүссэн",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateUserResponse"
                }
              }
            }
          }
        }
      }
    },

    "/bnpl/additional/merge": {
      "post": {
        "summary": "Харилцагчийн нэмэлт мэдээлэл үүсгэх",
        "description": "Харилцагчийн нэмэлт мэдээллийг бүртгэнэ.",
        "security": [{ "basicAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/AdditionalInfoRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Амжилттай бүртгэгдсэн",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/StandardSuccessResponse"
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    },

    "schemas": {
      "UserLookupResponse": {
        "type": "object",
        "properties": {
          "value": { "$ref": "#/components/schemas/User" },
          "data": { "type": ["object", "null"] },
          "msgList": {
            "type": "array",
            "items": { "type": "string" }
          },
          "attrs": { "type": "object" },
          "status": { "type": "string" }
        }
      },

      "User": {
        "type": "object",
        "required": [
          "userId",
          "mobileNumber",
          "registerCode",
          "firstName",
          "lastName"
        ],
        "properties": {
          "userId": { "type": "integer" },
          "mobileNumber": { "type": "string" },
          "registerCode": { "type": "string" },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "userAcct": { "type": ["string", "null"] }
        }
      },

      "CreateUserRequest": {
        "type": "object",
        "required": [
          "mobileNumber",
          "registerCode",
          "firstName",
          "lastName",
          "userAcct"
        ],
        "properties": {
          "mobileNumber": {
            "type": "string",
            "minLength": 8,
            "maxLength": 8
          },
          "registerCode": {
            "type": "string",
            "minLength": 10,
            "maxLength": 10
          },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "userAcct": { "type": "string" }
        }
      },

      "CreateUserResponse": {
        "type": "object",
        "required": ["value", "status"],
        "properties": {
          "value": { "type": "integer" },
          "data": { "type": ["object", "null"] },
          "msgList": {
            "type": "array",
            "items": { "type": "string" }
          },
          "attrs": { "type": "object" },
          "status": { "type": "string" }
        }
      },

      "RelativeInfo": {
        "type": "object",
        "required": [
          "relType",
          "lastName",
          "firstName",
          "workplaceName",
          "mobile"
        ],
        "properties": {
          "relType": { "type": "string" },
          "lastName": { "type": "string" },
          "firstName": { "type": "string" },
          "workplaceName": { "type": "string" },
          "mobile": { "type": "string" }
        }
      },

      "AdditionalInfoRequest": {
        "type": "object",
        "required": [
          "userId",
          "facebook",
          "mobile1",
          "mobile2",
          "familyList",
          "emergencyList"
        ],
        "properties": {
          "userId": { "type": "integer" },
          "facebook": { "type": "string" },
          "mobile1": { "type": "string" },
          "mobile2": { "type": "string" },
          "familyList": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/RelativeInfo" }
          },
          "emergencyList": {
            "type": "array",
            "minItems": 2,
            "items": { "$ref": "#/components/schemas/RelativeInfo" }
          }
        }
      },

      "StandardSuccessResponse": {
        "type": "object",
        "required": ["status"],
        "properties": {
          "value": { "type": ["integer", "null"] },
          "data": { "type": ["object", "null"] },
          "msgList": {
            "type": "array",
            "items": { "type": "string" }
          },
          "attrs": { "type": "object" },
          "status": { "type": "string", "example": "Success" }
        }
      }
    }
  }
}
