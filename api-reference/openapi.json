{
  "openapi": "3.1.0",
  "info": {
    "title": "BNPL API",
    "description": "BNPL системийн харилцагч лавлах, үүсгэх, нэмэлт мэдээлэл бүртгэх API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://api.example.com"
    }
  ],

  "paths": {
    "/bnpl/info/user": {
      "get": {
        "summary": "Харилцагч лавлах",
        "security": [{ "basicAuth": [] }],
        "parameters": [
          {
            "name": "register",
            "in": "query",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Амжилттай",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UserLookupResponse" }
              }
            }
          }
        }
      }
    },

    "/bnpl/merge/user": {
      "post": {
        "summary": "Харилцагч үүсгэх",
        "security": [{ "basicAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/CreateUserRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Амжилттай",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/CreateUserResponse" }
              }
            }
          }
        }
      }
    },

    "/bnpl/additional/merge": {
      "post": {
        "summary": "Харилцагчийн нэмэлт мэдээлэл үүсгэх",
        "security": [{ "basicAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/AdditionalInfoRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Амжилттай",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/StandardSuccessResponse" }
              }
            }
          }
        }
      }
    },

    "/bnpl/additional/info": {
      "get": {
        "summary": "Харилцагчийн нэмэлт мэдээлэл лавлах",
        "security": [{ "basicAuth": [] }],
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "required": true,
            "schema": { "type": "integer" }
          }
        ],
        "responses": {
          "200": {
            "description": "Амжилттай",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AdditionalInfoResponse"
                }
              }
            }
          }
        }
      }
    }
  },

  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    },

    "schemas": {
      "UserLookupResponse": {
        "type": "object",
        "properties": {
          "value": { "$ref": "#/components/schemas/User" },
          "status": { "type": "string" }
        }
      },

      "User": {
        "type": "object",
        "properties": {
          "userId": { "type": "integer" },
          "mobileNumber": { "type": "string" },
          "registerCode": { "type": "string" },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" }
        }
      },

      "CreateUserRequest": {
        "type": "object",
        "required": [
          "mobileNumber",
          "registerCode",
          "firstName",
          "lastName",
          "userAcct"
        ],
        "properties": {
          "mobileNumber": { "type": "string" },
          "registerCode": { "type": "string" },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "userAcct": { "type": "string" }
        }
      },

      "CreateUserResponse": {
        "type": "object",
        "properties": {
          "value": { "type": "integer" },
          "status": { "type": "string" }
        }
      },

      "RelativeInfo": {
        "type": "object",
        "required": [
          "relType",
          "lastName",
          "firstName",
          "workplaceName",
          "mobile"
        ],
        "properties": {
          "relType": { "type": "string" },
          "lastName": { "type": "string" },
          "firstName": { "type": "string" },
          "workplaceName": { "type": "string" },
          "mobile": { "type": "string" }
        }
      },

      "AdditionalInfoRequest": {
        "type": "object",
        "required": ["userId", "familyList", "emergencyList"],
        "properties": {
          "userId": { "type": "integer" },
          "facebook": { "type": "string" },
          "mobile1": { "type": "string" },
          "mobile2": { "type": "string" },
          "familyList": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/RelativeInfo" }
          },
          "emergencyList": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/RelativeInfo" }
          }
        }
      },

      "AdditionalInfoResponse": {
        "type": "object",
        "properties": {
          "value": {
            "$ref": "#/components/schemas/AdditionalInfoRequest"
          },
          "status": { "type": "string" }
        }
      },

      "StandardSuccessResponse": {
        "type": "object",
        "properties": {
          "value": { "type": ["integer", "null"] },
          "status": { "type": "string" }
        }
      }
    }
  }
}
